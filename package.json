{
  "name": "elearning",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "docker:up": "docker compose up -d",
    "prisma:studio": "npx prisma studio --config ./prisma.config.ts",
    "full": "concurrently \"npm run docker:up\" \"npm run dev\" \"npm run prisma:studio\"",
    "seed": "tsx prisma/seed.ts",
    "server:start": "bash scripts/server.sh start",
    "server:stop": "bash scripts/server.sh stop",
    "server:restart": "bash scripts/server.sh restart",
    "server:rebuild": "bash scripts/server.sh rebuild",
    "server:status": "bash scripts/server.sh status",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@types/busboy": "^1.5.4",
    "@vueup/vue-quill": "^1.2.0",
    "bcryptjs": "^2.4.3",
    "busboy": "^1.6.0",
    "dotenv": "^17.2.3",
    "jsonwebtoken": "^9.0.0",
    "nodemailer": "^7.0.13",
    "nuxt": "^4.2.2",
    "pg": "^8.17.1",
    "quill": "^2.0.3",
    "quill-delta": "^5.1.0",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@nuxt/test-utils": "^3.19.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^7.0.9",
    "@types/pg": "^8.16.0",
    "concurrently": "^9.2.1",
    "prisma": "^7.2.0",
    "tsx": "^4.21.0",
    "vite-plugin-vuetify": "^2.1.3",
    "vitest": "^3.2.4",
    "vuetify": "^3.11.6"
  }
}
